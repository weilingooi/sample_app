<% provide :title, @user.name %> 
<%= provide :button_text, t(".edit_user") %>
<h1 class="text-center"><%= t "users.edit.title" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3"> 
    <div class="gravatar_edit">
      <%= gravatar_for @user %>
      <%= link_to t(".avatar"), Settings.signup.gravatar.email, target: "_blank" %>. 
    </div>
    <div class="clearfix"></div>
    <%= render "form" %>
  </div>
</div>
