<% @user ||= current_user %>
<div class="stats">
  <%= link_to following_path(@user) do %>
    <strong id="following" class="stat">
      <%= @user.following.size %>
    </strong>
    <%= t "follow.following_title" %>
  <% end %>
  <%= link_to followers_path(@user) do %>
    <strong id="followers" class="stat">
      <%= @user.followers.size %>
    </strong>
    <%= t "follow.follower_title" %>
  <% end %>
</div>
