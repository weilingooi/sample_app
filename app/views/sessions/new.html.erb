<% provide :title, t(".log_in") %>
<h1 class="text-center"><%= t ".log_in" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for :session, url: login_path do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label :password %>
      <%= link_to t("sessions.forgot_password.forget_password"), new_password_reset_path %>
      <%= f.password_field :password, class: "form-control" %> 
      <%= f.label :remember, class: "checkbox-inline" do %>
        <%= f.check_box :remember %>
        <span><%= t ".remember_me" %></span>
      <% end %>
      <%= f.submit t(".log_in"), class: "btn btn-primary" %>
    <% end %>
    <p><%= t".new_user" %><%= link_to t(".sign_up_now"), signup_path %></p> 
  </div>
</div>
