<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "sample app", "#", id: "logo" %> 
    <nav>
      <ul class="nav navbar-nav navbar-right"> 
	<li><%= link_to t(".home"), home_path %></li> 
	<li><%= link_to t(".help"), help_path %></li> 
	<% if logged_in? %>
	  <li><%= link_to t(".user"), users_path %></li>
	  <li class="dropdown">
            <%= link_to ":user.id", {class: "dropdown-toggle", data: {"toggle" =>  "dropdown"}} do %>
              <%= t(".account") %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
	          <li><%= link_to t(".profile"), user_path(id: current_user.id) %></li>
		  <li><%= link_to t(".settings"), edit_user_path(id: current_user.id) %></li>
		  <li class="divider"></li>
		  <li><%= link_to t(".logout"), logout_path, method: :delete %></li>
	        </ul>
	      </li>
	    <% else %>
	      <li><%= link_to t(".log_in"), login_path, method: :delete %></li>
	    <% end %>
      </ul> 
    </nav>
  </div>
</header>
